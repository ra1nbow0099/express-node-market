<h1>Buys</h1>


<div id="card">
{{#if courses.length}}
<table>
    <thead>
        <tr>
            <th>Name of course</th>
            <th>Amount</th>
            <th>Movings</th>
        </tr>
    </thead>
    <tbody>

    {{#each courses}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button data-csrf="{{@root.csrf}}" class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<p><strong>Price:</strong><span class="price">{{price}}</span></p>

<form action="/orders" method="POST">

<input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn">Make an order</button>
</form>
{{else}}
<p>No buys here:(</p>
{{/if}}
</div>