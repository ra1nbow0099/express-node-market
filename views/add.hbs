<h1>Add new course</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="input correct course name!"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required value="{{data.price}}" min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="input correct price!"></span>
    </div> 

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">Url of the pic</label>
        <span class="helper-text" data-error="input correct url!"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Add course</button>

</form>